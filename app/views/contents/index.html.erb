<p id="notice"><%= notice %></p>

<header>

<h1>Orchis</h1>

</header>



<link href="https://fonts.googleapis.com/css?family=Syncopate" rel="stylesheet"> 

<table>

  <thead>

    <!-- Fonctionnel-->
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Family</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>

  </thead>



  <tbody>
   
  <!-- Fonctionnel -->

    <% @contents.each do |content| %>
      <tr>

        <td><%= image_tag content.image, class: 'image' %></td>
        <td class="nom"><%= content.name %></td>
        <td><%= content.family %></td>
        <td><%= content.description %></td>
        <td><%= link_to 'Show', content %></td>
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
        <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

